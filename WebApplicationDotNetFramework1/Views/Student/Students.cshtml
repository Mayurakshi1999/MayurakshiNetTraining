@model System.Collections.Generic.List<WebApplicationDotNetFramework1.BO.StudentBO>

@{ ViewBag.Title = "Student List"; }
<!DOCTYPE html>


<div class="container">
    <h2>Student List</h2>
    <p>Student Information</p>
    <div class="row">
        <div class="col-md-2 col-md-offset-10">
            @Html.ActionLink("Create Student", "CreateStudent")
        </div>
    </div>
    <table class="table">
        <thread>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Roll Number</th>
                <th>Marks</th>
                <th>Branch</th>
                <th>DateofBirth</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FN</td>
                    <td>@item.LN</td>
                    <td>@item.RollNo</td>
                    <td>@item.Marks</td>
                    <td>@item.Branch</td>
                    <td>
                        @if (item.DateOfBirth.HasValue)
                        {
                            @item.DateOfBirth.Value.ToString("dd-MM-yyyy");
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditStudent", new { Id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteStudent", new { Id = item.Id })
                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>
